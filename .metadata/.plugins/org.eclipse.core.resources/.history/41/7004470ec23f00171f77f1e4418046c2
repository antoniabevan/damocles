subroutine run_damocles_wrap()

    use globals
    use input
    use initialise
    use vector_functions
    use driver

    implicit none

    real :: mcmc_v_max
    real :: mcmc_chi2

!f2py   intent(in) mcmc_v_max
!f2py   intent(out) mcmc_chi2
!f2py   depend(mcmc_v_max) mcmc_chi2

    call run_damocles()

end subroutine
