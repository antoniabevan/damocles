!----------------------------------------------------------------------------!
!  this subroutine is only called if the python mcmc wrapper is being used.  !
!  the logical lg_mcmc is set to true and input parameters passed from the   !
!  python routine.                                                           !
!----------------------------------------------------------------------------!
subroutine run_damocles_wrap(mcmc_v_max,mcmc_chi2)

    use globals
    use input
    use initialise
    use vector_functions
    use driver

    implicit none

    real :: mcmc_v_max
    real :: mcmc_chi2

!f2py   intent(in) mcmc_v_max
!f2py   intent(out) mcmc_chi2
!f2py   depend(mcmc_v_max) mcmc_chi2

    lg_mcmc = .true.
    mcmc_chi2=mcmc_v_max*2
    call run_damocles()
    mcmc_chi2=chi_sq
end subroutine
